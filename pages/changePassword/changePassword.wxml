<view class="content">
  <form bindsubmit="formBindsubmit" bindreset="formReset">
    <view class="div">
      <label>用户名：</label>
       <view class="one">
      <input type="text" name="username"placeholder="请输入用户名"/>
      </view>
    </view>

    <view class="div">
      <label>旧密码：</label>
      <view class="one">
      <input type="text" name="password" password="true" placeholder="请输入旧密码"/>
      </view>
    </view>

    <view class="div">
      <label>新密码：</label>
       <view class="one">
      <input type="text" name="newPassword" password="true" placeholder="请输入新密码"/>
      </view>
    </view>

    <view class="div">
      <label>确认新密码：</label>
       <view class="one">
      <input type="text" name="newPassword2" password="true"placeholder="请确认新密码"/>
      </view>
    </view>

    <view class="function">
      <button form-type="submit" id="button">提交</button>
    </view>

  </form>

</view>