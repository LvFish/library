<view class="page">
  <view class="content">
    <form bindsubmit="formBindsubmit" bindreset="formReset">
      <view class="contain">

        <view class="div">
          <label>微信号:</label>
          <view class="one">
            <input name="wechatId" type="text" placeholder="请输入微信号" />
          </view>
        </view>

        <view class="div">
          <label>手机号码:</label>
          <view class="one">
            <input type="text" name="phoneNumber" placeholder="请输入手机号" />
          </view>
        </view>

        <view class="div">
          <label>邮箱:</label>
          <view class="one">
            <input type="text" name="email" placeholder="请输入邮箱" bindinput="emailInput" />
          </view>
        </view>

        <view class="div">
          <button class="button" bindtap="getCode">{{msg}}</button>
        </view>

        <view class="div">
          <label>验证码：</label>
          <view class="one">
            <input type="text" name="code" bindinput="codeInput" placeholder="请输入验证码" />
          </view>
        </view>

        <view class="div">
          <label>密码:</label>
          <view class="one">
            <input type="text" name="password" password="true" placeholder="请输入密码" />
          </view>
        </view>

        <view class="div">
          <label>确认密码:</label>
          <view class="one">
            <input type="text" name="rightPassword" password="true" placeholder="请确认密码" />
          </view>
        </view>

        <button form-type="submit" id="button1">注册</button>
        <button form-type="reset" id="button2">重置</button>

      </view>
      <!--<view class="buttonT"></view>-->
    </form>


    <view class="tip">{{tip}}</view>
  </view>
</view>