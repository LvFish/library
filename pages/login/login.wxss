page{
 background-color: #f2f2f2
}
.line{
  width: 100%;
  height: 42rpx;
  background-color: #cccccc;
}
.login{
  width: 90%;
  margin-top:15rpx; 
  margin-left: 60rpx;
  overflow: hidden;
  padding-top:20rpx;
  padding-bottom: 198rpx; 
}

.section{
  margin-top:20rpx;
  height: 100%;
  display: flex column;
  flex-direction: row;
  width: 95%;
  overflow: hidden;

}

.section_title{
  width: 25%;
  float: left;
  font-size:36rpx;
  line-height: 50rpx;
  font-family:"微软雅黑",serif; 
  padding-left: 2rpx;
  color: #666;
}

.section input{
  border: 1rpx solid #DFDFDF;
  height:30rpx;
  line-height: 50rpx;
  width: 95%;
  padding-left:5rpx;
  -webkit-appearance: none;
  -webkit-box-flex:1;
  flex: 1;   
  border-radius:0;
  background-color: white;
  font-size: 36rpx; 
}

#button button{
  display:block;
  margin-left: 0;
   cursor: pointer;
  background-color: #87CEEB;
  font-size:36rpx;
  font-family: "微软雅黑",serif;
  line-height: 70rpx;
  width: 90%;
	background: #27AE60;
	font-weight: bold;
	color: white;
	border: 0 none;
	border-radius: 1px;
  margin-top: 50rpx;
  margin-bottom:15rpx; 
}
#button button:hover{
  box-shadow: 0 0 0 2px white, 0 0 0 3px #27AE60;
  font-size:125%;
}

.help{
 font-size: 36rpx;
 font-family: "微软雅黑",serif;
 padding-left:5rpx;
 padding-right:80rpx;
 margin-top:40rpx;
 color:cadetblue; 
  cursor: pointer; 

}

