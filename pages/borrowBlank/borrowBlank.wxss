page{
  height:100%;
  background-color:#F8F8FF;
}
.state{
    background-color:gray;
    width: 100%;
    margin-top: 2px;
    margin-bottom:2px;
    height: 18px; 
    font-size:13px;
    font-family: "微软雅黑",serif;
    color: white; 
    padding-left: 15px;
}

.book_content{
    margin-top:10px; 
}


.book_ex{
    background-color: white;
    margin-right:10rpx;
    margin-left:10rpx;  
    margin-bottom:10rpx;
    padding-bottom:50rpx;
    height:100px;
  display: flex;
  min-height: 100rpx;
  flex-direction: column;
    
}

.book_img{
   
    float:left; 
    width:240rpx;
    height:230rpx;
    flex: 0 0 32%;
    box-sizing: border-box;
    min-height: 230rpx;
    margin:5rpx 0rpx 5rpx 10rpx;
    position: relative;
    z-index: 1rpx;
}

.book_info{ 
    margin-top:10rpx; 
    padding-right: 10rpx;
    font-size:30rpx; 
    font-family: "微软雅黑"; 
    float:right;
    position:absolute;
    right:50rpx;
     flex: 0 0 50%;
    box-sizing: border-box;
    height: 250rpx;
    width:350rpx;
    text-overflow:ellipsis;
    overflow:hidden; 
    white-space:nowrap; 
    padding-top:10rpx;
}

#state_text_right{
  display: block;
  float: right;
  margin-right:35rpx; 
}